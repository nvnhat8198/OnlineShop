
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<Models.FE.Menu>

@section cssAdminHeader{
    <!-- Custom styles for this page -->
    <link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section jsFooter{
    <!-- Page level plugins -->
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
    <script src="~/Assets/Admin/js/controller/productController.js"></script>
}

@section header{
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh mục Loại sản phẩm</h6>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <a class="btn btn-primary mb-3 ml-2 mb-sm-0" href="#">
                <i class="fa fa-plus"></i>
                Thêm Loại sản phẩm mới
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th style="text-align: center">Trạng thái</th>
                        <th style="text-align: center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.Text</td>
                            <td class="text-center"><a href="#" class="btn-active">@(item.Status ? "Hoạt động" : "Khóa")</a></td>
                            <td class="text-center">
                                <a href="/Admin/Product/Edit/@item.ID"><i class="fa fa-edit"></i></a>
                                |
                                <a href="#" data-id="@item.ID" class="delete-product"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteMessage" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="register-form">
                    <div class="fields-grid">
                        <div class="styled-input">
                            <label>Bạn có muốn xóa không?</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnDelete" class="btn btn-primary">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
            </div>
        </div>
    </div>
</div>

