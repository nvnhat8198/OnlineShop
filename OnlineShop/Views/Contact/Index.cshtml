
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="header-outs" id="home">
    @{Html.RenderAction("Header", "Home");}
</div>

<!-- banner -->
<div class="inner_page-banner one-img">
</div>
<!--//banner -->
<!-- short -->
<div class="using-border py-3">
    <div class="inner_breadcrumb  ml-4">
        <ul class="short_ls">
            <li>
                <a href="/">Home</a>
                <span>/ /</span>
            </li>
            <li>Liên hệ</li>
        </ul>
    </div>
</div>


<section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Liên hệ với chúng tôi</h3>
        <div class="contact-list-grid">
            @using (Html.BeginForm("PostInfo", "Contact", FormMethod.Post))
            {
            @*<form action="#" method="post">*@
                <div class=" agile-wls-contact-mid">
                    <div class="form-group contact-forms">
                        <input type="text" class="form-control" name="name" placeholder="Họ và tên">
                    </div>
                    <div class="form-group contact-forms">
                        <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group contact-forms">
                        <input type="text" class="form-control" name="phone" placeholder="Số điện thoại">
                    </div>
                    <div class="form-group contact-forms">
                        <textarea class="form-control" name="content" rows="3" placeholder="Nội dung"></textarea>
                    </div>
                    <button type="submit" class="btn btn-block sent-butnn">Gửi</button>
                </div>
            @*</form>*@
            }
        </div>
    </div>
