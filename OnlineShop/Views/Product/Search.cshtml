@model List<Models.FE.Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section jsFooter{
    <!-- price range (top products) -->
    <script src="~/Assets/Client/js/jquery-ui.js"></script>
    <script>
         //<![CDATA[
         $(window).load(function () {
         	$("#slider-range").slider({
         		range: true,
         		min: 0,
         		max: 9000,
         		values: [50, 6000],
         		slide: function (event, ui) {
         			$("#amount").val("$" + ui.values[0] + " - $" + ui.values[1]);
         		}
         	});
         	$("#amount").val("$" + $("#slider-range").slider("values", 0) + " - $" + $("#slider-range").slider("values", 1));

         }); //]]>
    </script>
}

<div class="header-outs" id="home">
    @{Html.RenderAction("Header", "Home");}
</div>

<!-- banner -->
<div class="inner_page-banner one-img">
</div>
<!--//banner -->
<!-- short -->
<div class="using-border py-3">
    <div class="inner_breadcrumb  ml-4">
        <ul class="short_ls">
            <li>
                <a href="/">Home</a>
                <span>/ /</span>
            </li>
            <li>Loại sản phẩm</li>
        </ul>
    </div>
</div>
<!-- //short-->
<!--show Now-->
<section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
    <div class="container-fluid py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Kết quả tìm kiếm</h3>
        <div class="row">
            <div class="side-bar col-lg-3" style="height: 160px">
                <div class="search-hotel">
                    <h3 class="agileits-sear-head">Tìm thấy @Model.Count() sản phẩm</h3>
                </div>
            </div>
            <div class="left-ads-display col-lg-9">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6 product-men women_two">
                            <div class="product-toys-info">
                                <div class="men-pro-item">
                                    <div class="men-thumb-item">
                                        <img src="@item.Image" class="img-thumbnail img-fluid" alt="">
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="/chi-tiet-san-pham/@item.ID" class="link-product-add-cart">Quick View</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">New</span>
                                    </div>
                                    <div class="item-info-product">
                                        <div class="info-product-price">
                                            <div class="grid_meta">
                                                <div class="product_price">
                                                    <h4>
                                                        <a href="single.html">@item.Name</a>
                                                    </h4>
                                                    <div class="grid-price mt-2">
                                                        @if (item.PromotionPrice > 0)
                                                        {
                                                            <span class="money ">$@item.PromotionPrice</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="money ">$@item.Price</span>
                                                        }
                                                    </div>
                                                </div>
                                                @if (item.PromotionPrice > 0)
                                                {
                                                    <ul class="stars">
                                                        <li>
                                                            <del>@item.Price</del>
                                                        </li>
                                                    </ul>
                                                }
                                            </div>
                                            <a href="/them-vao-gio-hang?id=@item.ID&quantity=1">
                                                <button class="toys-cart ptoys-cart">
                                                    <i class="fas fa-cart-plus"></i>
                                                </button>
                                            </a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- //show Now-->
